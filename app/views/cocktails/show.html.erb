
<div class="container">
  <div class="text-center padded feature">
    <h2><%= @cocktail.name %></h2>
    <h3>dose</h3>
    <% @cocktail.doses.each do|dose| %>
    <div class="container">
      <div class="text-center">
        <strong>dose :</strong>
        <%= dose.ingredient.name %> | <%=dose.description%>
        <%= link_to "X", dose_path(dose), method: :delete %>
